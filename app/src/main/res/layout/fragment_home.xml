<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Home"
    android:theme="@style/HomeTheme"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:contentDescription="@string/person_logo"
                android:layout_width="172dp"
                android:layout_height="177dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/iconpng" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="2dp"
                android:background="@drawable/blue_backfround">

                <TextView
                    android:id="@+id/reg_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:text="@string/registration_id"
                    android:textAppearance="@style/head" />

                <TextView
                    android:id="@+id/registration_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reg_head"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="2dp"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:text="@string/vag12002"
                    android:textAppearance="@style/subtext" />

                <TextView
                    android:id="@+id/las_head"
                    style="@style/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="164dp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:text="@string/last_date_visited" />

                <TextView
                    android:id="@+id/last_date_visited"
                    style="@style/subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/las_head"
                    android:layout_marginStart="164dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:text="@string/_03_july_2020" />

                <TextView
                    android:id="@+id/present_head"
                    style="@style/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/registration_id"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:text="@string/present_health_condition" />

                <TextView
                    android:id="@+id/present_health_condition"
                    style="@style/subtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/present_head"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:text="@string/recovering" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_records_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/present_health_condition"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:elevation="4dp"
                    android:text="@string/view_records"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="25dp"
                    tools:ignore="SmallSp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_new_record_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/present_health_condition"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@+id/view_records_button"
                    android:backgroundTint="@color/colorSecondary"
                    android:shadowColor="#000000"
                    android:text="@string/add_new_record"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:cornerRadius="25dp"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upcoming_appointments"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview_upcoming_appointments"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/past_appointments"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview_past_appointments"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>