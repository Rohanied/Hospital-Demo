<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Widget.InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.TextLayout.HintColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="hintTextColor">?attr/colorPrimaryDark</item>
        <item name="boxStrokeColor">@color/colorAccent</item>

    </style>

    <style name="TextAppearance.TextLayout.HintColor" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="head">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="subtext">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>

</resources>